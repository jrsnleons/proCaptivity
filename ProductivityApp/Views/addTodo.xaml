<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductivityApp.Views.addTodo"
             Title="Create a new todo"
             BackgroundColor="#0A192A">
    <ContentPage.Content>
        <StackLayout Padding="30">
            <Label Text="Title:" FontSize="30" FontAttributes="Bold" TextColor="White"/>
            <Entry 
                x:Name="titleEntry"
                Placeholder="Input todo here..."
                />
            <Label x:Name="test" Text="Description:" FontSize="30" FontAttributes="Bold" TextColor="White"/>
            <Entry 
                x:Name="descriptionEntry"
                Placeholder="Input description here..."/>
            <Button
                Margin="50"
                Text="Done"
                Clicked="ToAddTodo"
                BackgroundColor="#A09BE7"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>